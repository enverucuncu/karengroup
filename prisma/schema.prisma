// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Ürün modeli — logunuzdaki alanlara göre örnekledim
model Product {
  id            String              @id @default(cuid())
  slug          String              @unique
  coverUrl      String
  photos        ProductMedia[]
  titleTr       String
  descTr        String
  specsTr       String
  translations  ProductTranslation[]
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
}

model ProductMedia {
  id        String   @id @default(cuid())
  url       String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  createdAt DateTime @default(now())
}

model ProductTranslation {
  id        String   @id @default(cuid())
  lang      String   @db.VarChar(5) // tr, en, ar, ru, fr
  title     String?
  desc      String?
  specs     String?
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  @@index([productId, lang])
}
