// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"          // SQLite kullanıyorsan "sqlite" yap
  url      = env("DATABASE_URL")   // İstersen DB_URL da yazabilirsin; env ile uyumlu olsun
}

/* Modeller (örnek) */
model Project {
  id           Int      @id @default(autoincrement())
  slug         String   @unique
  coverUrl     String?
  titleTr      String?
  descTr       String?
  photos       Photo[]
  translations ProjectTranslation[]
  @@map("projects") // tablo adı plural ise
}

model Photo {
  id        Int     @id @default(autoincrement())
  url       String
  project   Project? @relation(fields: [projectId], references: [id])
  projectId Int?
}

model ProjectTranslation {
  id        Int     @id @default(autoincrement())
  lang      String
  title     String?
  desc      String?
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
}
